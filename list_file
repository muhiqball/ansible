---
- name: List files in /etc/yum.repos.d/
  hosts: all
  become: yes
  tasks:
    - name: List files in /etc/yum.repos.d/
      command: cat /etc/yum.repos.d/local.repo
      register: yum_repos_list

    - name: Display list of files in /etc/yum.repos.d/
      debug:
        var: yum_repos_list.stdout_lines
